{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "DTB Kampfrichtereinsatzpläne"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "window": {
        "all": false,
        "center": false,
        "close": true,
        "create": true,
        "hide": false,
        "maximize": false,
        "minimize": false,
        "print": false,
        "requestUserAttention": false,
        "setAlwaysOnTop": false,
        "setClosable": false,
        "setContentProtected": false,
        "setCursorGrab": false,
        "setCursorIcon": false,
        "setCursorPosition": false,
        "setCursorVisible": false,
        "setDecorations": false,
        "setFocus": false,
        "setFullscreen": false,
        "setIcon": false,
        "setIgnoreCursorEvents": false,
        "setMaxSize": false,
        "setMaximizable": false,
        "setMinSize": false,
        "setMinimizable": false,
        "setPosition": false,
        "setResizable": false,
        "setSize": false,
        "setSkipTaskbar": false,
        "setTitle": true,
        "show": false,
        "startDragging": false,
        "unmaximize": false,
        "unminimize": false
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": false,
        "message": false,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "nsis", "msi", "app", "dmg"],
      "identifier": "de.philippremy.dtb-kampfrichtereinsatzplaene",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "copyright": "© Philipp Remy 2024",
      "shortDescription": "DTB Kampfrichtereinsatzpläne",
      "longDescription": "Ein Programm zum Erstellen von Kampfrichtereinsatzplänen bei Rhönradwettkämpfen im DTB",
      "category": "Utilities",
      "publisher": "Philipp Remy",
      "macOS": {
        "minimumSystemVersion": "10.13",
        "license": "../LICENSE.txt",
        "frameworks": ["../lib/libkampfrichtereinsatzplaene_docx/build/libkampfrichtereinsatzplaene_docx.dylib"]
      },
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": {
          "license": "../installer/LICENSE.rtf",
          "installerIcon": "icons/icon.ico",
          "displayLanguageSelector": true,
          "compression": "lzma",
          "headerImage": "../installer/headerImage.bmp",
          "sidebarImage": "../installer/sidebarImage.bmp",
          "languages": ["German", "English"]
        },
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        },
        "wix": {
          "license": "../installer/LICENSE.rtf",
          "bannerPath": "../installer/bannerImage.bmp",
          "dialogImagePath": "../installer/dialogImage.bmp",
          "language": ["en-US", "de-DE"]
        }
      },
      "deb": {
        "files": {
          "./SharedLibs/libkampfrichtereinsatzplaene_docx.so": "../lib/libkampfrichtereinsatzplaene_docx/build/libkampfrichtereinsatzplaene_docx.so"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "DTB Kampfrichtereinsatzpläne",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "label": "mainUI"
      }
    ]
  }
}
